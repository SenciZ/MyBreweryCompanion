{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "../prod",
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "src",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "plugins": [
    {
      "name": "typescript-eslint-plugin"
    }
  ],
}